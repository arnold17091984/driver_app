# Server
PORT=8080
ENV=development

# Database
DATABASE_URL=postgres://driver:driver@localhost:5433/driver_db?sslmode=disable

# JWT (REQUIRED - no default fallback)
JWT_SECRET=<REPLACE_WITH_64_CHAR_SECRET>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# TLS (optional, required in production)
TLS_CERT=
TLS_KEY=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Firebase (path to service account JSON)
FIREBASE_CREDENTIALS_PATH=

# Location
LOCATION_STALE_THRESHOLD=2m
LOCATION_LOG_RETENTION_DAYS=90

# Reservation
RESERVATION_REMINDER_MINUTES=30

# CORS (comma-separated origins, defaults to http://localhost:5173)
CORS_ORIGINS=http://localhost:5173

# Rate limiting
RATE_LIMIT_RATE=20
RATE_LIMIT_BURST=40
